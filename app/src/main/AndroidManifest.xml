<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.mobilefinancetracker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".AddAccount"
            android:label="Add Account"
            android:theme="@style/AppTheme"
        />

        <activity android:name=".EditAccount"
            android:label="Edit Account"
            android:theme="@style/AppTheme"
        />


        <activity android:name=".AddExpense"
            android:label="Add Expense"
            android:theme="@style/AppTheme"
        />

        <activity android:name=".EditExpense"
            android:label="Edit Expense"
            android:theme="@style/AppTheme"
        />

        <activity android:name=".Habits"
            android:label="Habits"
            android:theme="@style/AppTheme"
        />

        <activity android:name=".ExpenseViewer"
            android:label="ExpenseViewer"
            android:theme="@style/AppTheme"
        />



    </application>

</manifest>
